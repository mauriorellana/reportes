
@{
    ViewBag.Title = "ReporteSimple";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


@section scripts {
    <script>
        $(document).ready(function () {

            //Boton ver reporte
            $("#btnVer").on("click", function () {
                $("#ReporteSimple").attr("src", "VerReporte").load;
            });

            //Boton descargar reporte
            $("#btnDescargar").on("click", function () {
                window.open("VerReporte");
            });


        });
    </script>
}







<h2>ReporteSimple</h2>
<hr>

<input type="button" id="btnVer" value="Ver Reporte" class="btn btn-success" />

<input type="button" id="btndescargar" value="Descargar Reporte" class="btn btn-warning" />
<hr>

<iframe id="ReporteSimple" style="width: 100%; height:600px;" frameborder="0" scrolling="yes">
</iframe>



